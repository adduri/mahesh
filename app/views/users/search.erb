      <tr>
        <td> <%= s.firstname %></td> <td> -- <%= s.mj_id%> </td>
      </tr>
    <% end %>
  <% end %>

  <% if params[:search] == "occupation" %>
    <% @z = User.find_all_by_occupation(params[:searchname]) %>
