      </tr>
    <% end %>
  <% end %>

  <% if params[:search] == "station" %>
    <% @p = User.find_all_by_station(params[:searchname]) %>
    <% @p.each do |s| %>
      <tr>
        <td><%= s.firstname %></td><td> -- <%= s.mj_id%> </td>
      </tr>
    <% end %>
  <% end %>

  <% if params[:search] == "mobileno" %>
    <% @q = User.find_all_by_mobileno(params[:searchname]) %>
    <% @q.each do |m| %>
      <tr>
        <td><%= m.firstname %> -- <%= m.mj_id%> </td>
      </tr><br/>
