<h2>Search</h2>
<form>
  Search by: &nbsp;
  <select name="search" class="select_style">
    <option  value="firstname">Name</option>
    <option  value="lastname">Surname</option>
    <option  value="occupation">Occupation</option>
    <option  value="mobileno">Mobileno</option>
    <option  value="station">Station</option>
  </select> <br/><br/>
  whom do u want to search?
  <input type="text" name="searchname" value="" id="searchbox" placeholder="Search for member"/><input button="submit" id="search_button" />
  
   <p class="button" style="padding-top:13px;padding-left:210px">
    <input name="commit" type="submit" value="Search" class="button_style" />
  </p>  





</form>
<table>
  <%  if params[:search] == "firstname" %>
    <%  @x = User.find_all_by_firstname(params[:searchname]) %>
    <% @x.each do |f| %>
      <tr>
        <td><%= f.firstname %></td> <td> -- <%= f.mj_id%></td>
      </tr>
    <% end %>
  <% end %>

  <% if params[:search] == "lastname" %>
    <%  @y = User.find_all_by_lastname(params[:searchname]) %>
